# PR Review Server Configuration for Docker
# Copy this to .env and fill in your values

# Required
GITHUB_TOKEN=your_github_token_here
GITHUB_USERNAME=your_github_username_here

# Optional - Server Configuration
SERVER_PORT=7769
POLLING_INTERVAL=1m

# Path to cbpr binary on your host machine
# Default assumes cbpr is in /usr/local/bin/cbpr
# Change this if cbpr is elsewhere, e.g.:
# CBPR_PATH=/Users/zbedmm/go/bin/cbpr
CBPR_PATH=/usr/local/bin/cbpr

# Voice notifications (only works if Docker has access to macOS audio)
ENABLE_VOICE_NOTIFICATIONS=false
